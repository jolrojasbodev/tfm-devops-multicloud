pipeline {
    agent {
        kubernetes {
            // Usamos un Pod con 2 contenedores: Docker (para empaquetar) y Helm (para desplegar)
            yaml '''
apiVersion: v1
kind: Pod
metadata:
  labels:
    app: jenkins-agent-builder
spec:
  containers:
  - name: docker
    image: docker:dind
    command: ['cat']
    tty: true
    securityContext:
      privileged: true # Necesario para DinD o montar sockets
    volumeMounts:
    - name: docker-socket
      mountPath: /var/run/docker.sock
  - name: helm
    image: alpine/helm:3.12.3
    command: ['cat']
    tty: true
  volumes:
  - name: docker-socket
    hostPath:
      path: /var/run/docker.sock
'''
        }
    }

    environment {
        // ACTUALIZADO CON TU USUARIO
        DOCKER_REGISTRY = "jolrojasbodev" 
        IMAGE_NAME = "spring-petclinic"
        APP_NAME = "petclinic-tfm"
        NAMESPACE = "default" 
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
                script {
                    echo "üîß Iniciando Pipeline TFM (Modo Multi-Stage Docker) v2"
                }
            }
        }
        
        stage('Docker Build & Push') {
            steps {
                container('docker') {
                    dir('local-deploy/petclinic') {
                        script {
                            echo "üê≥ Construyendo imagen (Compilaci√≥n incluida en Dockerfile)..."
                            
                            // CORRECCI√ìN DE SEGURIDAD: --password-stdin (v2 fix)
                            withCredentials([usernamePassword(credentialsId: 'dockerhub-creds', passwordVariable: 'DOCKER_PASS', usernameVariable: 'DOCKER_USER')]) {
                                sh 'echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin'
                            }
                            
                            sh "docker build -t ${DOCKER_REGISTRY}/${IMAGE_NAME}:latest ."
                            sh "docker push ${DOCKER_REGISTRY}/${IMAGE_NAME}:latest"
                            
                            // Captura del Digest
                            env.IMAGE_DIGEST = sh(script: "docker inspect --format='{{index .RepoDigests 0}}' ${DOCKER_REGISTRY}/${IMAGE_NAME}:latest | cut -d'@' -f2", returnStdout: true).trim()
                            echo "üîí Digest capturado: ${env.IMAGE_DIGEST}"
                        }
                    }
                }
            }
        }

        stage('Deploy Helm') {
            steps {
                container('helm') {
                    script {
                        echo "üöÄ Desplegando en Kubernetes..."
                        sh """
                        helm upgrade --install ${APP_NAME} ./deploy/apps/helm/apps \
                          --namespace ${NAMESPACE} \
                          --values ./local-deploy/petclinic/values-local.yaml \
                          --set image.digest=${env.IMAGE_DIGEST} \
                          --set image.repository=${DOCKER_REGISTRY}/${IMAGE_NAME}
                        """
                    }
                }
            }
        }
    }
}