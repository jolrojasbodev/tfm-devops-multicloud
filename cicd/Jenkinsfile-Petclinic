pipeline {
    agent {
        kubernetes {
            // A√ëADIDO: Contenedor 'kubectl' para aplicar infraestructura previa
            yaml '''
apiVersion: v1
kind: Pod
metadata:
  labels:
    app: jenkins-agent-builder
spec:
  containers:
  - name: docker
    image: docker:dind
    command: ['cat']
    tty: true
    securityContext:
      privileged: true 
    volumeMounts:
    - name: docker-socket
      mountPath: /var/run/docker.sock
  - name: helm
    image: alpine/helm:3.12.3
    command: ['cat']
    tty: true
  - name: kubectl
    image: bitnami/kubectl:latest
    command: ['cat']
    tty: true
  volumes:
  - name: docker-socket
    hostPath:
      path: /var/run/docker.sock
'''
        }
    }

    environment {
        DOCKER_REGISTRY = "jolrojasbodev" 
        IMAGE_NAME = "spring-petclinic"
        APP_NAME = "petclinic-tfm"
        NAMESPACE = "default" 
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
                script {
                    echo "üîß Iniciando Pipeline TFM (Modo Full Autom√°tico) v5"
                }
            }
        }
        
        stage('Docker Build & Push') {
            steps {
                container('docker') {
                    dir('local-deploy/petclinic') {
                        script {
                            echo "üê≥ Construyendo imagen..."
                            withCredentials([usernamePassword(credentialsId: 'dockerhub-creds', passwordVariable: 'DOCKER_PASS', usernameVariable: 'DOCKER_USER')]) {
                                sh 'echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin'
                            }
                            sh "docker build -t ${DOCKER_REGISTRY}/${IMAGE_NAME}:latest ."
                            sh "docker push ${DOCKER_REGISTRY}/${IMAGE_NAME}:latest"
                            env.IMAGE_DIGEST = sh(script: "docker inspect --format='{{index .RepoDigests 0}}' ${DOCKER_REGISTRY}/${IMAGE_NAME}:latest | cut -d'@' -f2", returnStdout: true).trim()
                        }
                    }
                }
            }
        }

        stage('Deploy Infra & App') {
            steps {
                // PASO 1: Infraestructura (Base de Datos)
                container('kubectl') {
                    script {
                        echo "üèóÔ∏è Asegurando infraestructura base (MySQL + Secretos)..."
                        // Aplica el archivo de MySQL antes de desplegar la app
                        sh "kubectl apply -f local-deploy/infra/mysql-local-setup.yaml"
                    }
                }

                // PASO 2: Aplicaci√≥n (Helm)
                container('helm') {
                    script {
                        echo "üöÄ Desplegando Aplicaci√≥n en Kubernetes..."
                        sh """
                        helm upgrade --install ${APP_NAME} ./deploy/apps/helm/apps \
                          --namespace ${NAMESPACE} \
                          --values ./local-deploy/petclinic/values-local.yaml \
                          --set image.digest=${env.IMAGE_DIGEST} \
                          --set image.repository=${DOCKER_REGISTRY}/${IMAGE_NAME} \
                          --set autoscaling.enabled=false
                        """
                    }
                }
            }
        }
    }
}